<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zhoujl.mapper.OrderMapper">

	<resultMap type="Order" id="OrderResult">
		<id property="orderId" column="order_id" />
		<result property="memberId" column="member_id" />
		<result property="orderNumber" column="order_num" />
		<result property="goodsName" column="goods_name" />
	</resultMap>

	<select id="findAllOrders" resultMap="OrderResult">
		select * from t_order
	</select>

	<select id="findOrderById" resultMap="OrderResult">
		select * from t_order where order_id=#{orderId}
	</select>

	<insert id="insertOrder" parameterType="Order">
		insert into
		t_order (order_id, member_id, order_num, goods_name)
		values (#{orderId},#{memberId},#{orderNumber},#{goodsName})
	</insert>

	<update id="updateOrder" parameterType="Order">
		update t_order set
		member_id = #{memberId},
		order_num = #{orderNumber},
		goods_name = #{goodsName}
		where order_id = #{orderId}
	</update>

	<delete id="deleteOrder" parameterType="int">
		delete from t_order where order_id = #{orderId}
	</delete>
</mapper>
